@model Cart
@{
    ViewData["Title"] = "editActionCart";
}
<link rel="stylesheet" href="../css/Customer.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

<center>
    <section class="products">

        <h1 class="title">Update Cart</h1>

        <div class="box-container">
            <form action="" method="post" class="box">
                <input type="hidden" name="CartID" value="@Model.CartID">
                <input type="hidden" name="UserID" value="@Model.UserID">
                <input type="hidden" name="ProductID" value="@Model.ProductID">
                <input type="hidden" name="ProductName" value="@Model.ProductName">
                <input type="hidden" name="ProductPrice" value="@Model.ProductPrice">
                <input type="hidden" name="ProductS3Key" value="@Model.ProductS3Key">
                <input type="hidden" name="ProductURL" value="@Model.ProductURL">
                @*<a href="quick_view.php?pid=<?= $fetch_cart['pid']; ?>" class="fas fa-eye"></a>*@
                <button type="submit" class="fas fa-times" name="delete" onclick="return confirm('Delete this item?');"></button>
                <img src="@Model.ProductURL" alt="">
                <div class="name">@Model.ProductName</div>
                <div class="flex">
                    <div class="price"><span>$</span>@Model.ProductPrice</div>
                    <input type="number" name="ProductQuantity" class="qty" min="1" max="99" value="@Model.ProductQuantity" maxlength="2">
                    <button type="submit" asp-action="processEditPageCart" asp-route-ProductID="@Model.CartID" class="fas fa-edit" name="update_qty"></button>
                </div>
                <div class="sub-total"> sub total : <span>$@Model.ProductSubTotal</span> </div>
                <a href="javascript: history.go(-1)" class="option-btn">go back</a>
            </form>
        </div>

    </section>
</center>
