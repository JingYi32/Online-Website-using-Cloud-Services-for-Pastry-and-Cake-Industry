@model OrderProduct
@{
    ViewData["Title"] = "Review";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>orders</title>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="~/css/style.css">

</head>
<body>
    <div class="heading">
        <h3>Review for Order Product</h3>
    </div>

    <div class="section">
        <form asp-action="processReview" asp-controller="OrderList" method="post">
            <input type="hidden" asp-for="@Model.OrderProductID" />
            <input type="hidden" asp-for="@Model.OrderID" />
            <input type="hidden" asp-for="@Model.ProductID" />
            <input type="hidden" asp-for="@Model.ProductName" />
            <input type="hidden" asp-for="@Model.ProductQuantity" />
            <input type="hidden" asp-for="@Model.ProductUnitPrice" />
            <div><label style="font-size: 30px" asp-for="@Model.OrderComment"></label></div>
            <div><textarea style="border:solid 1px orange;" asp-for="@Model.OrderComment" rows="6" , cols="50"></textarea></div>
            <div><label style="font-size: 30px" asp-for="@Model.OrderRating"></label></div>
            <div><input style="border: 1px solid orange;" type="number" asp-for="@Model.OrderRating" min="1" max="5"></div>
            <div><button type="submit" class="btn btn-primary">Save Review</button></div>

        </form>
    </div>
</body>
</html>

